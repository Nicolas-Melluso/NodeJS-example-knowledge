        if (accountsClaimed !== undefined) updateData.accountsClaimed = accountsClaimed;
        if (casinoOwner !== undefined) updateData.casinoOwner = casinoOwner;

        const userUpdated = await findAndUpdateUserById(id, updateData, { new: true });

